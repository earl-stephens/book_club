<h1>All Books</h1>

<% @books.each do |book| %>
  <h2><%= link_to book.title, book_path(book), class: "1" %></h2>
  <h2><%= book.title %></h2>
  <h2><%= book.author %></h2>
  <p>Pages: <%= book.pages %></p>
  <p>Year: <%= book.year_pub %></p>
  <p><%= book.publisher %></p>
  <img src="<%= book.image %>"/>
  <p>Average Score: <%= book.avg_score %></p>
  <p>All Reviews:</p>
  <% book.reviews.each do |review| %>
    <p><%= review.title %>
    <p><%= review.review_text %>
    <p>Score: <%= review.score %>
  <% end %>
<% end %>
